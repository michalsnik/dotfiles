// Place your settings in this file to overwrite the default settings
{
    "window.zoomLevel": 2,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/dist/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/tmp": true
    },
    "editor.tabSize": 2,
    "editor.detectIndentation": false
}
